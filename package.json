{
  "name": "typescript-react-template",
  "version": "0.4.0",
  "description": "a typescript react template",
  "keywords": [],
  "license": "MIT",
  "author": "lawvs",
  "scripts": {
    "build": "webpack --config scripts/webpack.prod.config.ts --color",
    "build:ssr": "export SSR=1 && pnpm build && ts-node scripts/prerender.ts",
    "build:static": "export SSR_STATIC=1 && pnpm build:ssr",
    "clean": "rm -rf dist coverage",
    "dev": "webpack serve --config scripts/webpack.dev.config.ts --hot --color",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "pnpm lint --fix",
    "start": "pnpm run dev",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "typecheck": "tsc --noEmit --project ."
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/html-webpack-template": "^6.0.9",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "@types/styled-components": "^5.1.26",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.6.0",
    "html-webpack-template": "^6.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.91.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": "please-use-pnpm",
    "pnpm": ">=8.0.0",
    "yarn": "please-use-pnpm"
  }
}
