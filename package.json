{
  "name": "typescript-react-template",
  "version": "0.3.0",
  "description": "a typescript react template",
  "scripts": {
    "start": "yarn dev",
    "dev": "webpack-dev-server --config scripts/webpack.dev.config.ts --mode=development --colors --watch --hot",
    "build": "webpack --config scripts/webpack.prod.config.ts --mode=production --colors",
    "build:ssr": "export SSR=1 && yarn build && ts-node scripts/prerender.ts",
    "build:static": "export SSR_STATIC=1 && yarn build:ssr",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "yarn lint --fix",
    "typecheck": "tsc --noEmit --project .",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": [],
  "author": "lawvs",
  "license": "MIT",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.0"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/html-webpack-template": "^6.0.4",
    "@types/jest": "^25.2.3",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.0",
    "@types/webpack-dev-server": "^3.11.0",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "awesome-typescript-loader": "^5.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.1",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "html-webpack-plugin": "^4.3.0",
    "html-webpack-template": "^6.2.0",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.9.0",
    "typescript": "^3.9.5",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  }
}
