{
  "name": "typescript-react-template",
  "version": "0.4.0",
  "description": "a typescript react template",
  "keywords": [],
  "license": "MIT",
  "author": "lawvs",
  "scripts": {
    "build": "webpack --config scripts/webpack.prod.config.ts --color",
    "build:ssr": "export SSR=1 && pnpm build && ts-node scripts/prerender.ts",
    "build:static": "export SSR_STATIC=1 && pnpm build:ssr",
    "clean": "rm -rf dist coverage",
    "dev": "webpack serve --config scripts/webpack.dev.config.ts --hot --color",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "pnpm lint --fix",
    "start": "pnpm run dev",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "typecheck": "tsc --noEmit --project ."
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@jest/types": "^29.0.1",
    "@types/html-webpack-template": "^6.0.6",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.26",
    "@types/webpack-bundle-analyzer": "^4.4.2",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "html-webpack-template": "^6.2.0",
    "jest": "^29.0.1",
    "jest-environment-jsdom": "^29.0.1",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.6.1",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.10.0",
    "webpack-merge": "^5.8.0"
  },
  "engines": {
    "node": ">=17.0.0",
    "npm": "please-use-pnpm",
    "pnpm": ">=7.0.0",
    "yarn": "please-use-pnpm"
  }
}
