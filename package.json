{
  "name": "typescript-react-template",
  "version": "0.4.0",
  "description": "a typescript react template",
  "scripts": {
    "start": "yarn dev",
    "dev": "webpack serve --config scripts/webpack.dev.config.ts --watch --hot --color",
    "build": "webpack --config scripts/webpack.prod.config.ts --color",
    "build:ssr": "export SSR=1 && yarn build && ts-node scripts/prerender.ts",
    "build:static": "export SSR_STATIC=1 && yarn build:ssr",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "yarn lint --fix",
    "typecheck": "tsc --noEmit --project .",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [],
  "author": "lawvs",
  "license": "MIT",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.1"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/html-webpack-template": "^6.0.5",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.14",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "@types/webpack-dev-server": "^4.3.0",
    "@types/webpack-merge": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.0",
    "html-webpack-plugin": "^5.3.2",
    "html-webpack-template": "^6.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.4.1",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.2.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.4.3",
    "url-loader": "^4.1.0",
    "webpack": "^5.54.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.3.1",
    "webpack-merge": "^5.8.0"
  }
}
